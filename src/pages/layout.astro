---
import { ClientRouter } from "astro:transitions";
import Navbar from '../components/Navbar.astro';
import '../styles/global.css';

const currentPath = Astro.url.pathname;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
	</head>
	<body class="bg-slate-800 text-white font-mono">
		<Navbar currentPath={currentPath} />
		<div class="md:w-1/2 mx-auto px-4">
			<slot />
		</div>
		<footer class="mt-10 text-sm text-stone-400 text-center">
			<div class="mb-4 flex items-center justify-center space-x-6">
				<a href="https://github.com/AlexGaudon" class="text-blue-400 hover:underline transition-colors" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
					<!-- GitHub Icon -->
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
						<path d="M12 0.297C5.373 0.297 0 5.67 0 12.297c0 5.283 3.438 9.77 8.205 11.387.6.11.82-.261.82-.577 0-.285-.01-1.04-.015-2.043-3.338.726-4.042-1.61-4.042-1.61-.546-1.387-1.333-1.756-1.333-1.756-1.09-.745.084-.729.084-.729 1.205.085 1.84 1.237 1.84 1.237 1.07 1.835 2.809 1.305 3.495.998.108-.775.418-1.306.762-1.606-2.665-.305-5.466-1.332-5.466-5.93 0-1.31.469-2.382 1.236-3.222-.124-.303-.535-1.523.117-3.176 0 0 1.008-.322 3.301 1.23a11.53 11.53 0 0 1 3.006-.404c1.02.005 2.05.138 3.006.404 2.292-1.552 3.299-1.23 3.299-1.23.653 1.653.242 2.873.118 3.176.77.84 1.235 1.912 1.235 3.222 0 4.61-2.803 5.624-5.475 5.921.428.369.823 1.096.823 2.21 0 1.595-.015 2.884-.015 3.277 0 .319.217.694.825.576C20.565 22.062 24 17.575 24 12.297 24 5.67 18.627.297 12 .297z"/>
					</svg>
				</a>
				<a href="mailto:alex@alexgaudon.dev" class="text-blue-400 hover:underline transition-colors" target="_blank" rel="noopener noreferrer" aria-label="Email">
					<!-- Email Icon -->
					<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
						<path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 2v.01L12 13 4 6.01V6h16zM4 20v-9.17l7.58 6.59c.39.34.96.34 1.35 0L20 10.83V20H4z"/>
					</svg>
				</a>
				<a href="https://alexgaudon.dev" class="text-blue-400 hover:underline transition-colors" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
					<!-- alexgaudon.dev icon -->
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 24 24"
						width="24"
						height="24"
						fill="none"
						stroke="currentColor"
						stroke-width="1.6"
						stroke-linecap="round"
						stroke-linejoin="round"
						aria-hidden="true"
						class="transition-colors duration-150 text-blue-400 hover:underline"
					>
						<rect x="3" y="5" width="18" height="11" rx="1" />
						<path d="M1 18h22" />
					</svg>
				</a>
			</div>
			<span>misery.systems</span>
			<br/>
			<span class="text-stone-400 opacity-20">not a cry for help. just a joke.</span>
		</footer>
	</body>
</html>

<ClientRouter />