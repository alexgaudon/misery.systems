---
import Link from '../components/Link.astro';
import "../styles/global.css";

const currentPath = Astro.url.pathname;
const currentPage =
  currentPath === "/"
    ? "index"
    : currentPath.replace(/^\//, "").replace(/\/$/, "");
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>misery.systems</title>
    <meta name="description" content="misery.systems - my homelab" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&display=swap" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-[var(--cat-base)] m-0 min-h-screen font-mono text-[var(--cat-text)]">
    <span class="hidden sm:block top-4 right-4 z-[100] fixed font-semibold text-xl" style="color:var(--cat-text)">misery.systems</span>
    <header class="flex justify-between items-center bg-[var(--cat-base)] p-4">
      <button type="button" class="hover:bg-[var(--cat-surface)] p-2 rounded-lg text-[var(--cat-text)] transition-colors menu-toggle" aria-label="Open menu">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M4 5h16"></path>
          <path d="M4 12h16"></path>
          <path d="M4 19h16"></path>
        </svg>
      </button>
      <span class="sm:hidden font-semibold text-xl" style="color:var(--cat-text)">misery.systems</span>
    </header>

    <aside class="top-0 left-0 z-50 fixed flex flex-col w-64 h-full transition-transform -translate-x-full sm:translate-x-0 duration-300 sidebar" id="sidebar">
      <nav class="flex-1 p-4 overflow-y-auto">
        <a href="/" class="flex items-center gap-3 mb-2 p-3 rounded-lg transition-colors" class:list={[{ 'bg-[var(--cat-teal)] text-[var(--cat-base)]': currentPage === 'index' }, { 'hover:bg-[var(--cat-surface-alt)] text-[var(--cat-text)]': currentPage !== 'index' }]}>
          <span class="font-medium">home</span>
        </a>
        <a href="/about" class="flex items-center gap-3 mb-2 p-3 rounded-lg transition-colors" class:list={[{ 'bg-[var(--cat-teal)] text-[var(--cat-base)]': currentPage === 'about' }, { 'hover:bg-[var(--cat-surface-alt)] text-[var(--cat-text)]': currentPage !== 'about' }]}>
          <span class="font-medium">about</span>
        </a>
        <a href="/services" class="flex items-center gap-3 mb-2 p-3 rounded-lg transition-colors" class:list={[{ 'bg-[var(--cat-teal)] text-[var(--cat-base)]': currentPage === 'services' }, { 'hover:bg-[var(--cat-surface-alt)] text-[var(--cat-text)]': currentPage !== 'services' }]}>
          <span class="font-medium">services</span>
        </a>
        <div class="bg-[var(--cat-base)] mt-8 p-4 rounded-lg">
          <div class="font-medium text-sm mb-3" style="color:var(--cat-subtext)">Quick Links</div>
          <div class="flex flex-col gap-3 text-sm">
            <a href="https://github.com/AlexGaudon" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 hover:underline" style="color:var(--cat-teal)">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0.297C5.373 0.297 0 5.67 0 12.297c0 5.283 3.438 9.77 8.205 11.387.6.11.82-.261.82-.577 0-.285-.01-1.04-.015-2.043-3.338.726-4.042-1.61-4.042-1.61-.546-1.387-1.333-1.756-1.333-1.756-1.09-.745.084-.729.084-.729 1.205.085 1.84 1.237 1.84 1.237 1.07 1.835 2.809 1.305 3.495.998.108-.775.418-1.306.762-1.606-2.665-.305-5.466-1.332-5.466-5.93 0-1.31.469-2.382 1.236-3.222-.124-.303-.535-1.523.117-3.176 0 0 1.008-.322 3.301 1.23a11.53 11.53 0 0 1 3.006-.404c1.02.005 2.05.138 3.006.404 2.292-1.552 3.299-1.23 3.299-1.23.653 1.653.242 2.873.118 3.176.77.84 1.235 1.912 1.235 3.222 0 4.61-2.803 5.624-5.475 5.921.428.369.823 1.096.823 2.21 0 1.595-.015 2.884-.015 3.277 0 .319.217.694.825.576C20.565 22.062 24 17.575 24 12.297 24 5.67 18.627.297 12 .297z"/>
              </svg>
              GitHub
            </a>
            <a href="mailto:alex@alexgaudon.dev" class="flex items-center gap-2 hover:underline" style="color:var(--cat-teal)">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 2v.01L12 13 4 6.01V6h16zM4 20v-9.17l7.58 6.59c.39.34.96.34 1.35 0L20 10.83V20H4z"/>
              </svg>
              Email
            </a>
            <a href="https://alexgaudon.dev" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 hover:underline" style="color:var(--cat-teal)">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="5" width="18" height="11" />
                <path d="M1 18h22" />
              </svg>
              Main Site
            </a>
          </div>
        </div>
      </nav>
    </aside>

    <div class="invisible z-40 fixed inset-0 bg-black/50 opacity-0 transition-opacity duration-300 overlay" id="overlay"></div>

    <main class="bg-[var(--cat-base)] p-6 min-h-screen overflow-y-auto font-mono text-[var(--cat-text)]" style="font-family:'JetBrains Mono', monospace;color:var(--cat-text)">
      <div class="mx-auto max-w-3xl">
        <slot />
        <footer style="margin-top: 2rem; padding-top: 1rem; border-top: 1px solid var(--cat-overlay-0); text-align: center; font-size: 0.75rem; color: var(--cat-overlay-1);">
          not a cry for help. just a joke.
        </footer>
      </div>
    </main>

    <script>
      const sidebar = document.getElementById('sidebar');
      const overlay = document.getElementById('overlay');
      const menuToggle = document.querySelector('.menu-toggle');

      menuToggle?.addEventListener('click', () => {
        sidebar?.classList.remove('-translate-x-full');
        overlay?.classList.remove('opacity-0', 'invisible');
      });

      overlay?.addEventListener('click', () => {
        sidebar?.classList.add('-translate-x-full');
        overlay?.classList.add('opacity-0', 'invisible');
      });

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          sidebar?.classList.add('-translate-x-full');
          overlay?.classList.add('opacity-0', 'invisible');
        }
      });

      document.querySelectorAll('.terminal-link').forEach(link => {
        const shouldAddBrackets = link.getAttribute('data-brackets') !== 'false';
        const text = link.textContent?.trim();
        link.textContent = shouldAddBrackets ? `[${text}]` : text;
      });
    </script>
  </body>
</html>
