---
interface Props {
	currentPath: string;
}

const { currentPath } = Astro.props;

const filePath = currentPath === '/' ? 'index.md' : currentPath.split('/').filter(Boolean).pop() + '.md';

const navLinks = [
	{ href: "/", label: "index" },
	{ href: "/about", label: "about" },
	{ href: "/services", label: "services" },
];
---

<nav class="border-b-2 border-white bg-black">
	<div class="max-w-3xl mx-auto px-4 py-2">
		<div class="flex gap-4 mb-2">
			{navLinks.map((link) => (
				<a
					href={link.href}
					class={`font-mono text-sm transition-all ${
						currentPath === link.href
							? 'text-green-400'
							: 'text-white hover:text-green-400'
					}`}
				>
					[{link.label}]
				</a>
			))}
		</div>
		<div class="font-mono text-sm border-t border-gray-700 pt-2">
			<span class="text-green-400">guest</span>@<span class="text-blue-400">misery.systems</span>:<span class="text-blue-300">~{currentPath}</span>$ cat page.md
		</div>
	</div>
</nav>
