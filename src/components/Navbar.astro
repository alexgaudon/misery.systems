---
interface Props {
	currentPath: string;
}

const { currentPath } = Astro.props;

const navLinks = [
	{ href: "/", label: "misery.systems" },
	{ href: "/about", label: "about" },
	{ href: "/services", label: "services" },
];
---

<nav class="border-b-2 border-white">
	<div class="max-w-3xl mx-auto px-4">
		<div class="flex">
			{navLinks.map((link) => (
				<a
					href={link.href}
					class={`px-4 py-3 uppercase tracking-wide font-bold border-r-2 border-white transition-all ${
						currentPath === link.href
							? 'bg-white text-black'
							: 'hover:bg-white hover:text-black'
					}`}
				>
					{link.label}
				</a>
			))}
		</div>
	</div>
</nav>
